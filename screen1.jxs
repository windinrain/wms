// 2. 核心大数字卡片
const BigStatCard = ({ label, value, unit, icon: Icon, subLabel, trend }) => {
  const [displayValue, setDisplayValue] = useState(value);
  
  useEffect(() => {
    if (displayValue !== value) {
      const diff = value - displayValue;
      const step = Math.ceil(diff / 10);
      const timer = setTimeout(() => {
        setDisplayValue(prev => prev + (diff !== 0 ? (Math.abs(diff) < 10 ? diff : step) : 0));
      }, 50);
      return () => clearTimeout(timer);
    }
  }, [value, displayValue]);

  return (
    <div className="relative p-4 bg-[#0a0f18] border border-cyan-900/30 rounded-xl overflow-hidden flex flex-col justify-between h-full hover:border-cyan-500/50 transition-colors duration-300 group">
      <div className="flex justify-between items-start mb-2">
         <div className="p-2 bg-cyan-900/20 rounded-lg text-cyan-400 group-hover:bg-cyan-500/20 transition-colors">
            <Icon className="w-6 h-6" />
         </div>
         <span className={`text-xs font-mono px-2 py-0.5 rounded ${trend === 'up' ? 'text-green-400 bg-green-900/20' : 'text-cyan-400 bg-cyan-900/20'}`}>
            {subLabel}
         </span>
      </div>
      <div>
        <h3 className="text-gray-400 text-xs font-bold tracking-widest uppercase mb-1">{label}</h3>
        <div className="flex items-baseline space-x-1">
          <span className="text-3xl font-mono font-bold text-white tracking-tight tabular-nums drop-shadow-[0_0_8px_rgba(6,182,212,0.4)]">
            {displayValue.toLocaleString()}
          </span>
          <span className="text-cyan-600 text-xs font-bold">{unit}</span>
        </div>
      </div>
    </div>
  );
};

// 3. 仪表盘
const Gauge = ({ value, min, max, label, unit, color = "#06b6d4" }) => {
  const radius = 30;
  const circumference = 2 * Math.PI * radius;
  const percentage = (value - min) / (max - min);
  const strokeDashoffset = circumference - (percentage * circumference * 0.75);
  const rotation = -135 + (percentage * 270);

  return (
    <div className="flex flex-col items-center justify-center p-2 bg-[#0d131f] rounded-lg border border-white/5">
      <div className="relative w-20 h-20">
        <svg className="w-full h-full transform rotate-[135deg]" viewBox="0 0 100 100">
          <circle cx="50" cy="50" r={radius} stroke="#1f2937" strokeWidth="8" fill="none" strokeDasharray={`${circumference * 0.75} ${circumference * 0.25}`} />
          <circle 
            cx="50" 
            cy="50" 
            r={radius} 
            stroke={color} 
            strokeWidth="8" 
            fill="none" 
            strokeDasharray={`${circumference} ${circumference}`}
            style={{ strokeDashoffset, transition: 'stroke-dashoffset 0.5s ease-out' }}
            strokeLinecap="round"
          />
        </svg>
        <div 
            className="absolute top-1/2 left-1/2 w-[2px] h-[26px] bg-white origin-bottom shadow-[0_0_5px_white]"
            style={{ 
                transform: `translate(-50%, -100%) rotate(${rotation}deg)`,
                transition: 'transform 0.5s cubic-bezier(0.4, 2, 0.55, 0.44)'
            }}
        >
          <div className="absolute -bottom-1 -left-1 w-2.5 h-2.5 bg-gray-300 rounded-full border-2 border-gray-900"></div>
        </div>
        <div className="absolute bottom-0 left-0 w-full text-center">
            <span className="text-sm font-mono font-bold text-white tabular-nums">{value}</span>
            <span className="text-[9px] text-gray-400 block -mt-0.5">{unit}</span>
        </div>
      </div>
      <span className="text-[10px] font-bold text-gray-400 mt-1 uppercase">{label}</span>
    </div>
  );
};

// 4. 赛马榜
const EfficiencyRank = () => {
  const initialData = HUMANS.map(name => ({ name, score: getRandomInt(60, 95), id: name }));
  const [data, setData] = useState(initialData);

  useEffect(() => {
    const interval = setInterval(() => {
      setData(prevData => {
        const newData = prevData.map(item => ({
          ...item,
          score: Math.min(100, Math.max(50, item.score + getRandomInt(-2, 3)))
        }));
        return [...newData].sort((a, b) => b.score - a.score);
      });
    }, 2000);
    return () => clearInterval(interval);
  }, []);

  return (
    <div className="bg-[#0a0f18] border border-cyan-900/30 rounded-xl p-4 h-full overflow-hidden flex flex-col relative">
      <div className="flex items-center justify-between mb-4 border-b border-gray-800 pb-2">
        <h3 className="text-cyan-400 font-bold flex items-center text-sm tracking-wider">
          <Activity className="w-4 h-4 mr-2" /> 人员效率排行榜
        </h3>
        <span className="text-xs text-gray-500 font-mono animate-pulse">LIVE</span>
      </div>
      <div className="flex-1 space-y-3 relative overflow-hidden">
        {data.slice(0, 8).map((item, index) => (
          <div 
            key={item.id} 
            className="flex items-center w-full transition-all duration-700 ease-in-out absolute"
            style={{ top: `${index * 36}px` }}
          >
            <div className={`w-6 text-xs font-bold font-mono ${index < 3 ? 'text-yellow-400' : 'text-gray-500'}`}>0{index + 1}</div>
            <div className="w-16 text-xs text-gray-300 truncate mr-2">{item.name}</div>
            <div className="flex-1 h-1.5 bg-gray-800 rounded-full overflow-hidden">
              <div 
                className="h-full rounded-full transition-all duration-700 ease-out relative"
                style={{ 
                  width: `${item.score}%`,
                  backgroundColor: item.score > 90 ? '#10b981' : (item.score > 75 ? '#06b6d4' : '#f59e0b')
                }}
              />
            </div>
            <div className="w-8 text-right text-xs font-mono text-white ml-2">{item.score}</div>
          </div>
        ))}
      </div>
      <div className="absolute bottom-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-cyan-900 to-transparent"></div>
    </div>
  );
};

// 5. 库区实时状态 (Zone Monitor) - 升级版：矩阵可视化 + 动态扫描
const ZoneMap = () => {
    // 增加 activity 字段，显示当前正在进行的任务
    const [zones, setZones] = useState([
        { id: 'A', name: '室内货架区', fill: 85, bots: 1, humans: 3, status: '繁忙', type: 'Indoor', activeTask: '上架作业' },
        { id: 'B', name: '室内地堆区', fill: 42, bots: 1, humans: 4, status: '正常', type: 'Indoor', activeTask: '自动盘点' },
        { id: 'C', name: '室外堆场区', fill: 15, bots: 0, humans: 2, status: '正常', type: 'Outdoor', activeTask: '装车' },
        { id: 'D', name: '验收区', fill: 60, bots: 0, humans: 5, status: '繁忙', type: 'Receiving', activeTask: '收货质检' },
    ]);

    useEffect(() => {
        const interval = setInterval(() => {
            setZones(prev => {
                const newZones = [...prev];
                // 机器人分配逻辑
                const botsInA = Math.random() > 0.5 ? 2 : (Math.random() > 0.5 ? 1 : 0);
                const botsInB = 2 - botsInA;
                
                newZones[0].bots = botsInA;
                newZones[1].bots = botsInB;
                
                newZones.forEach(z => {
                    z.humans = Math.max(1, Math.min(8, z.humans + getRandomInt(-1, 1)));
                    if(Math.random() > 0.7) z.fill = Math.min(100, Math.max(0, z.fill + getRandomInt(-2, 2)));
                    // 随机变动任务
                    if (Math.random() > 0.8) {
                        const tasks = z.type === 'Indoor' ? ['拣货', '上架', '盘点'] : (z.type === 'Outdoor' ? ['装车', '移位'] : ['收货', '赋码']);
                        z.activeTask = tasks[Math.floor(Math.random() * tasks.length)];
                    }
                });
                return newZones;
            });
        }, 3000);
        return () => clearInterval(interval);
    }, []);

    // 生成模拟货位网格
    const renderGrid = (fillRate, type) => {
        const totalCells = 40; // 5x8 grid
        const filledCells = Math.floor((fillRate / 100) * totalCells);
        
        return (
            <div className="grid grid-cols-10 gap-0.5 h-12 mt-2 opacity-80">
                {Array.from({ length: totalCells }).map((_, i) => {
                    const isFilled = i < filledCells;
                    // 不同区域颜色区分
                    const colorClass = type === 'Indoor' ? 'bg-cyan-500' : (type === 'Receiving' ? 'bg-emerald-500' : 'bg-yellow-500');
                    return (
                        <div 
                            key={i} 
                            className={`rounded-[1px] transition-all duration-500 ${isFilled ? colorClass : 'bg-gray-800'}`}
                            style={{ opacity: isFilled ? (0.4 + Math.random() * 0.6) : 0.2 }} // 随机透明度增加颗粒感
                        />
                    );
                })}
            </div>
        );
    };

    return (
        <div className="h-full bg-[#0a0f18] border border-cyan-900/30 rounded-xl p-4 flex flex-col relative overflow-hidden group">
            <div className="flex justify-between items-center mb-3 z-10">
                <h3 className="text-cyan-400 font-bold flex items-center text-sm tracking-wider">
                    <Scan className="w-4 h-4 mr-2" /> 库区全景监控
                </h3>
                <div className="flex items-center space-x-2 text-[10px] font-mono text-gray-400 border border-gray-800 rounded px-2 py-1 bg-black/20">
                     <span className="animate-pulse text-green-400">●</span> 
                     <span>DATA SYNCING...</span>
                </div>
            </div>

            {/* 2x2 Grid Layout */}
            <div className="grid grid-cols-2 grid-rows-2 gap-3 flex-1 z-10">
                {zones.map((zone) => (
                    <div key={zone.id} className="bg-[#0d131f] border border-gray-800 rounded-lg p-3 relative hover:border-cyan-500/30 transition-all flex flex-col justify-between overflow-hidden">
                        
                        {/* 区域背景装饰字 */}
                        <div className="absolute right-2 top-2 text-4xl font-black text-gray-800/50 select-none pointer-events-none font-mono">
                            {zone.id}
                        </div>

                        {/* 头部：名称与状态 */}
                        <div className="flex justify-between items-center relative z-10">
                            <div className="flex flex-col">
                                <span className="text-white font-bold text-sm flex items-center">
                                    {zone.name}
                                </span>
                                <span className="text-[10px] text-cyan-300/70 font-mono mt-0.5 flex items-center">
                                    <Activity className="w-3 h-3 mr-1 inline" /> {zone.activeTask}
                                </span>
                            </div>
                            <div className={`w-2 h-2 rounded-full shadow-[0_0_5px_currentColor] ${
                                zone.status === '繁忙' ? 'bg-yellow-500 text-yellow-500' :
                                zone.status === '满载' ? 'bg-red-500 text-red-500' :
                                'bg-green-500 text-green-500'
                            }`}></div>
                        </div>

                        {/* 中部：货位矩阵可视化 */}
                        <div className="relative z-10">
                            <div className="flex justify-between text-[10px] text-gray-500 font-mono mb-1">
                                <span>存储密度</span>
                                <span>{zone.fill}%</span>
                            </div>
                            {renderGrid(zone.fill, zone.type)}
                        </div>

                        {/* 底部：资源状态 */}
                        <div className="flex items-center justify-between text-xs mt-2 pt-2 border-t border-gray-800/50 relative z-10">
                             <div className="flex items-center space-x-3">
                                 <div className="flex items-center text-gray-300">
                                    <Users className="w-3 h-3 mr-1" />
                                    <span className="font-mono">{zone.humans}</span>
                                 </div>
                                 {zone.type === 'Indoor' && (
                                     <div className={`flex items-center ${zone.bots > 0 ? 'text-emerald-400' : 'text-gray-600'}`}>
                                        <Wifi className="w-3 h-3 mr-1" />
                                        <span className="font-mono">{zone.bots}</span>
                                     </div>
                                 )}
                             </div>
                             <span className="text-[10px] text-gray-500 font-mono uppercase">{zone.status}</span>
                        </div>

                        {/* 选中/激活态的高亮边框 */}
                        {zone.status === '繁忙' && (
                            <div className="absolute inset-0 border border-yellow-500/10 pointer-events-none animate-pulse"></div>
                        )}
                    </div>
                ))}
            </div>

            {/* 全局雷达扫描效果 */}
            <div className="absolute inset-0 pointer-events-none overflow-hidden rounded-xl">
                 <div className="absolute top-0 left-0 w-full h-[20%] bg-gradient-to-b from-cyan-500/10 to-transparent animate-[scan_4s_linear_infinite]"></div>
            </div>

            {/* 背景点阵 */}
            <div className="absolute inset-0 pointer-events-none opacity-5" 
                    style={{ 
                        backgroundImage: 'radial-gradient(#fff 1px, transparent 1px)', 
                        backgroundSize: '10px 10px' 
                    }}>
            </div>
        </div>
    )
}

// 6. 任务流水
const TaskTicker = () => {
  const [logs, setLogs] = useState([
    { id: 1, type: '上架', user: '张伟', loc: 'A-01-12', time: '14:20:01', priority: 'high', isBot: false },
    { id: 2, type: '自动盘点', user: '机器人-01', loc: 'B-04-05', time: '14:19:55', priority: 'normal', isBot: true },
    { id: 3, type: '拣货', user: '李强', loc: 'C-02-01', time: '14:19:42', priority: 'low', isBot: false },
  ]);

  useEffect(() => {
    const interval = setInterval(() => {
      const isRobotTask = Math.random() > 0.7; 
      
      let newUser, newType;
      
      if (isRobotTask) {
          newUser = getRandomItem(ROBOTS);
          newType = getRandomItem(ROBOT_TASKS);
      } else {
          newUser = getRandomItem(HUMANS);
          newType = getRandomItem(HUMAN_TASKS);
      }

      const newLog = {
        id: Date.now(),
        type: newType,
        user: newUser,
        loc: getRandomItem(LOCATIONS),
        time: new Date().toLocaleTimeString('en-GB'),
        priority: Math.random() > 0.8 ? 'high' : 'normal',
        isBot: isRobotTask
      };
      setLogs(prev => [newLog, ...prev.slice(0, 8)]); 
    }, 1500);
    return () => clearInterval(interval);
  }, []);

  return (
    <div className="bg-[#0a0f18] border border-cyan-900/30 rounded-xl flex flex-col h-full overflow-hidden">
       <div className="p-3 border-b border-gray-800 flex justify-between items-center bg-gray-900/30">
        <h3 className="text-cyan-400 font-bold flex items-center text-sm">
          <Layers className="w-4 h-4 mr-2" /> 实时作业流水
        </h3>
      </div>
      <div className="flex-1 overflow-hidden relative p-2">
        <div className="flex flex-col space-y-2">
            {logs.map((log) => (
            <div 
                key={log.id} 
                className={`
                    flex justify-between items-center px-3 py-2 rounded text-xs font-mono animate-[fadeIn_0.5s_ease-out] border-l-2
                    ${log.priority === 'high' 
                        ? 'bg-red-900/10 border-red-500 text-red-200' 
                        : (log.isBot ? 'bg-emerald-900/10 border-emerald-500/50 text-emerald-200' : 'bg-gray-800/30 border-cyan-800/50 text-cyan-100')
                    }
                `}
            >
                <div className="flex flex-col">
                    <div className="flex items-center">
                        <span className={`font-bold mr-2 ${log.priority === 'high' ? 'text-red-400' : (log.isBot ? 'text-emerald-400' : 'text-cyan-400')}`}>
                            {log.type}
                        </span>
                        {log.isBot && <Wifi className="w-3 h-3 text-emerald-500" />}
                    </div>
                    <span className="text-gray-500 scale-90 origin-top-left">{log.time}</span>
                </div>
                <div className="text-right">
                    <div className="text-gray-300">{log.loc}</div>
                    <div className="text-gray-500 scale-90 origin-top-right">{log.user}</div>
                </div>
            </div>
            ))}
        </div>
      </div>
    </div>
  );
};

