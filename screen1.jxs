                    <Gauge value={65} min={0} max={100} unit="%" label="湿度" color="#06b6d4" />
                    <Gauge value={35} min={0} max={150} unit="μg/m³" label="PM2.5" color="#10b981" />
                    <Gauge value={80} min={0} max={200} unit="μg/m³" label="PM10" color="#f59e0b" />
                </div>
            </div>
        </div>

        {/* 中间核心栏 (6/12): 数据总览 & 库区热力图 */}
        <div className="col-span-6 flex flex-col gap-4 min-h-0">
            {/* 上部：核心指标 (固定高度) */}
            <div className="h-28 grid grid-cols-4 gap-3 shrink-0">
                <BigStatCard 
                    label="当日入库" value={stats.inbound} unit="单" 
                    icon={Box} subLabel="+12%" trend="up"
                />
                <BigStatCard 
                    label="当日出库" value={stats.outbound} unit="单" 
                    icon={Zap} subLabel="+5%" trend="up"
                />
                <BigStatCard 
                    label="当日盘点" value={stats.cycleCount} unit="件" 
                    icon={ClipboardCheck} subLabel="进行中" trend="flat"
                />
                <BigStatCard 
                    label="作业行数" value={stats.totalLines} unit="行" 
                    icon={Cpu} subLabel="高负载" trend="up"
                />
            </div>

            {/* 下部：库区监控 (占据剩余空间) */}
            <div className="flex-1 min-h-0">
                <ZoneMap />
            </div>
        </div>

        {/* 右侧栏 (3/12): 流水 & 预警 (上下分割) */}
        <div className="col-span-3 flex flex-col gap-4 min-h-0">
            {/* 上半部分：任务流水 */}
            <div className="flex-[3] min-h-0">
                <TaskTicker />
            </div>
            {/* 下半部分：固定异常区域 */}
            <div className="flex-[2] min-h-0">
                <AlertPanel alerts={alerts} />
            </div>
        </div>
      </div>

      <style>{`
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-5px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes scan {
            0% { top: -20%; opacity: 0; }
            50% { opacity: 0.5; }
            100% { top: 120%; opacity: 0; }
        }
        .custom-scrollbar::-webkit-scrollbar {
            width: 4px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
            background: #1f2937;
            border-radius: 2px;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #ef4444; 
            border-radius: 2px;
        }
      `}</style>
    </div>
  );
};

export default App;
